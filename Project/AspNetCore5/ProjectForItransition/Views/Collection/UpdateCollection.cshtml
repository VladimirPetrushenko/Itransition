@model ProjectForItransition.Models.ContentCollection
@{
    ViewData["Title"] = "Update Collection";
}
<h1>Create Collection</h1>
<form method="post" asp-action="UpdateCollection" asp-controller="Collection">
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <input type="hidden" name="UserName" value="@Model.UserName" />
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" name="Items" value="@Model.Items" />
    <h2>Name Collection</h2>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />
    <p>Description</p>
    <textarea name="Description" class="form-control" rows="10" value="@Model.Description"></textarea>
    <p>Topic</p>
    <select name="Topic">
        @foreach (var item in Enum.GetValues(typeof(ProjectForItransition.Models.Topic)))
        {
            if ((ProjectForItransition.Models.Topic)item == Model.Topic)
            {
                <option value="@item" selected>@item</option>
            }
            else
            {
                <option value="@item">@item</option>
            }
        }
    </select>

    <div id="NameElements"></div>

    <input type="button" onclick="appendElement('NameElements', '')" value="Add IntegerElement" />
    <input type="submit" value="Update" />
</form>

<script>
    function appendElement(element, name, type) {
        document.getElementById(element).innerHTML += "<input type=\"text\" name=\"names\" class=\"form-text\" value=\"" + name + "\" /> "
            + getInputFieldForNameElement(type);
    }

    function getInputFieldForNameElement(type) {
        var html = "<select name=\"types\">";
        var elements = new Array();
        var i = 0;
        @foreach (var item in Enum.GetValues(typeof(ProjectForItransition.Models.TypeField)))
        {
            @: elements[i] = "@item";
            @: i++;
        }
        for (var i = 0; i < elements.length; i++) {
            html += "<option value=\"" + elements[i] + "\" ";
            if (elements[i] === type)
                html += "selected"
            html += " >" + elements[i] + "</option>";
        }
        html += "</select> <br />";
        return html;
    }

    @for (int i = 0; i < Model.NameElements.Count(); i++)
    {
        @: appendElement("NameElements", "@Model.NameElements[i].Name", "@Model.NameElements[i].Type");
    }
</script>
