@model IEnumerable<ProjectForItransition.Models.Collection.ContentCollection>

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="row mt-4">
    @foreach (var collection in Model)
    {
        <div class="col-sm-6 col-md-6 col-lg-4 card-group mb-3">
            <div class="card">
                @{
                    @if (collection.Image != null)
                    {
                        var url = Cloudinary.Api.UrlImgUp.Format("png")
                                    .Transform(new Transformation().Width(300).Height(250).Crop("fill").Gravity("north"));
                        @Html.Raw(url.BuildImageTag(collection.Image.PublicId, new StringDictionary("alt=Image collection", "class= card-img-top")))
                    }
                    else
                    {
                        var url = Cloudinary.Api.UrlImgUp.Format("png")
                                       .Transform(new Transformation().Width(300).Height(250).Crop("fill").Gravity("north").Effect("sepia").Chain());
                        @Html.Raw(url.BuildImageTag("olbzel1gbnvmqbyjgnyj", new StringDictionary("alt=Image collection", "class= card-img-top")))
                    }
                }
                <div class="card-body pb-5">
                    <h5 class="card-title">@collection.Name</h5>
                    <div class="card-subtitle">@Localizer["Topic"] - @collection.Topic</div>
                    <div class="card-text">@Localizer["UserName"] - @collection.UserName</div>
                    <div class="card-text">@collection.Description</div>
                    <div class="card-text card-bottom btn-group mr-1">
                        <form method="get" asp-action="ShowCollection" asp-controller="Collection">
                            <input type="hidden" name="collectionId" value="@collection.Id" />
                            <button class="btn rounded-pill btn-primary">@Localizer["ShowCollection"]</button>
                            @if (User.IsInRole("admin"))
                            {
                                <button class="btn btn-primary btn-circle"
                                        formmethod="get" asp-action="UpdateCollection" asp-controller="Collection">
                                    <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="edit" class="svg-inline--fa fa-edit fa-w-18" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
                                        <path fill="currentColor" d="M402.6 83.2l90.2 90.2c3.8 3.8 3.8 10 0 13.8L274.4 405.6l-92.8 10.3c-12.4 1.4-22.9-9.1-21.5-21.5l10.3-92.8L388.8 83.2c3.8-3.8 10-3.8 13.8 0zm162-22.9l-48.8-48.8c-15.2-15.2-39.9-15.2-55.2 0l-35.4 35.4c-3.8 3.8-3.8 10 0 13.8l90.2 90.2c3.8 3.8 10 3.8 13.8 0l35.4-35.4c15.2-15.3 15.2-40 0-55.2zM384 346.2V448H64V128h229.8c3.2 0 6.2-1.3 8.5-3.5l40-40c7.6-7.6 2.2-20.5-8.5-20.5H48C21.5 64 0 85.5 0 112v352c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48V306.2c0-10.7-12.9-16-20.5-8.5l-40 40c-2.2 2.3-3.5 5.3-3.5 8.5z">
                                        </path>
                                    </svg>
                                </button>
                                <button class="btn btn-danger btn-circle"
                                        formmethod="post" asp-action="DeleteCollection" asp-controller="Collection">
                                    <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="ban" class="svg-inline--fa fa-ban fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                                        <path fill="currentColor" d="M256 8C119.034 8 8 119.033 8 256s111.034 248 248 248 248-111.034 248-248S392.967 8 256 8zm130.108 117.892c65.448 65.448 70 165.481 20.677 235.637L150.47 105.216c70.204-49.356 170.226-44.735 235.638 20.676zM125.892 386.108c-65.448-65.448-70-165.481-20.677-235.637L361.53 406.784c-70.203 49.356-170.226 44.736-235.638-20.676z">
                                        </path>
                                    </svg>
                                </button>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
