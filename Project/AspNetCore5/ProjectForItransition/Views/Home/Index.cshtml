@model ProjectForItransition.ViewModels.Collection.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div class="row">
    <div class="col-2 bg-white border">
        <div class="row">
            <div class="col-12">
                <h3 class="text-center m-2">Last Items</h3>
            </div>
            @if (Model.Items != null)
            {
                foreach (var item in Model.Items)
                {
                    <div class="col-12">
                        <form asp-action="Index" asp-controller="Item" method="get">
                            <input type="hidden" name="collectionId" value="@item.Collection.Id" />
                            <input type="hidden" name="itemId" value="@item.Id" />
                            <input type="submit" class="btn btn-link" value="@item.Name" />
                        </form>
                    </div>
                    <div class="col-12">
                        @if (item.Tags != null)
                        {
                            foreach (var tag in item.Tags.Select(x => x.Name))
                            {
                                <span>@tag </span>
                            }
                        }
                    </div>
                }
            }
            else
            {
                <div class="col-12">Didn't find any items</div>
            }
        </div>
    </div>
    <div class="col-7 bg-light">
        <div class="row">
            @foreach (var collection in Model.Collections)
            {
                <div class="col-sm-6 pt-1">
                    <div class="card">
                        @{
                            var url = Cloudinary.Api.UrlImgUp.Format("png")
                                            .Transform(new Transformation().Width(300).Height(200).Crop("fill").Gravity("north").Effect("sepia").Chain());
                            @if (collection.Image != null)
                            {
                                @Html.Raw(url.BuildImageTag(collection.Image.PublicId, new StringDictionary("alt=Image collection", "class= card-img-top")))
                            }
                            else
                            {
                                @Html.Raw(url.BuildImageTag("olbzel1gbnvmqbyjgnyj", new StringDictionary("alt=Image collection", "class= card-img-top")))
                            }
                        }
                        <div class="card-body">
                            <h5 class="card-title">@collection.Name</h5>
                            <p class="card-text">@collection.Description</p>
                            <p class="card-text">Topic - @collection.Topic</p>
                            <p class="card-text">Amount items - @collection.Items.Count()</p>
                            <form method="get" asp-action="ShowCollection" asp-controller="Collection">
                                <input type="hidden" name="collectionId" value="@collection.Id" />
                                <button class="btn btn-primary">Show this collection</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-3 bg-white"> <div id="container2" class="tagCloud"></div> </div>
</div>
<script charset="utf-8">
    var items = new Array();
    var html = document.createElement('div');
    @foreach (var item in Model.Tags)
    {
        @:html.innerHTML = "@item.Name";
        @:items.push({ text: html.innerHTML, weight: @item.Count })
        @:html += "@item.Name";
    }
    html.delete
    $(function () {
        $("#container2").jQCloud(items, {
            width: 250,
            height: 800
        });
    });
</script>