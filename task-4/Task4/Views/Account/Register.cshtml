@model Task4.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h4>Create a new account.</h4>
<hr />
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Login">Login</label>
            <input class="form-control" placeholder="Login" asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FullName">Full Name</label>
        <input class="form-control" placeholder="Full Name" asp-for="FullName">
        <span asp-validation-for="FullName"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Password">Password</label>
            <input class="form-control" placeholder="Password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PasswordConfirm">PasswordConfirm</label>
            <input asp-for="PasswordConfirm" class="form-control" placeholder="PasswordConfirm">
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
    </div>
    <div>
        <input type="submit" value="Registration" class="btn btn-primary" />
    </div>
</form>
